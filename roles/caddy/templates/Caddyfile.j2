# Global: default ACME issuer with Cloudflare DNS-01 (token from env CLOUDFLARE_API_TOKEN)
{
    auto_https disable_redirects

	cert_issuer acme {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
	}
}

