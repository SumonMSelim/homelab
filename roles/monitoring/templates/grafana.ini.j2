[server]
root_url = {{ grafana_root_url }}

[auth]
disable_login_form = false

[auth.generic_oauth]
enabled = true
name = {{ grafana_oidc_name }}
allow_sign_up = true
auto_login = true
client_id = {{ grafana_vault_secret.data.data.data.client_id }}
client_secret = {{ grafana_vault_secret.data.data.data.client_secret }}
scopes = {{ grafana_oidc_scopes }}
auth_url = {{ grafana_oidc_auth_url }}
token_url = {{ grafana_oidc_token_url }}
api_url = {{ grafana_oidc_api_url }}
role_attribute_path = contains(groups[*], 'owner') && 'Admin' || 'Viewer'
use_pkce = false
